﻿@model LopHoc

<div class="container">
    <h3>Bạn có chắc muốn xóa thông tin của lớp này?</h3>
    <form method="post" asp-action="DeleteConfirm">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <lable asp-for="Name">Tên lớp </lable>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />

        <lable asp-for="DateCreated">Ngày nhập học </lable>
        <input asp-for="DateCreated" type="date" class="form-control" />
        <span asp-validation-for="DateCreated" class="text-danger"></span>
        <br />

        <lable asp-for="DateOut">Ngày nhập học </lable>
        <input asp-for="DateOut" type="date" class="form-control" />
        <span asp-validation-for="DateOut" class="text-danger"></span>
        <br />

        <lable asp-for="Soluong">Số lượng học sinh </lable>
        <input asp-for="Soluong" type="text" class="form-control"/>
        <span asp-validation-for="Soluong" class="text-danger"></span>
        <br />

        <button type="submit" class="btn btn-primary">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}