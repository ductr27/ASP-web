﻿@model TheLoai
<div class="container">
	<h3>Thông tin chi tiết</h3>
	<form method="post" asp-action="Details">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Name">Tên thể loại</label>
			<input asp-for="Name" type="text" class="form-control" readonly style="pointer-events:none;"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="from-group">
			<label asp-for="Name">Ngày tạo</label>
			<input asp-for="DateCreated" type="date" class="form-control" readonly style="pointer-events: none;" />
			<span asp-validation-for="DateCreated" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Name">Nhà cung cấp</label>
			<input asp-for="Suppliers" type="text" class="form-control" readonly style="pointer-events:none;" />
			<span asp-validation-for="Suppliers" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Quay lại</button>
	</form>

</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}